<UserControl x:Class="WpfApp1.Views.ForumOverview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="950">

    <TabControl TabStripPlacement="Left" >
        <TabItem Header="Overview" Width="90" Height="25">
            <ListView ItemsSource="{Binding Forums}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="State" Width="400" DisplayMemberBinding="{Binding Location.State}" />
                        <GridViewColumn Header="City" Width="420" DisplayMemberBinding="{Binding Location.City}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </TabItem>
        <TabItem Header="Forum" Width="90" Height="25" Margin="-1,2,1,-2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Title" FontSize="30"></Label>

                <ListView
                     Grid.Row="1"
                     x:Name="Lista"
                     Margin="0,15,10,0"
                     ItemsSource="{Binding ForumComments}">

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="FontWeight" Value="Regular"/>
                            <Setter Property="Height" Value="200"/>
                            <Setter Property="Width" Value="990"/>
                            <Setter Property="Margin" Value="0,2,0,0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                                        <Grid Background="{TemplateBinding Background}">
                                            <Border BorderBrush="LightGray" BorderThickness="0"/>
                                            <GridViewRowPresenter/>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.View>
                        <GridView>
                            <GridView.ColumnHeaderContainerStyle>
                                <Style TargetType="{x:Type GridViewColumnHeader}">
                                    <Setter Property="IsEnabled" Value="False"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontStyle" Value="Italic"/>
                                </Style>
                            </GridView.ColumnHeaderContainerStyle>

                            <GridViewColumn Width="990" Header="Feed">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="15" BorderThickness="3" Width="970" Height="190" Background="LightGray" >
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="5"/>
                                                    <RowDefinition Height="65"/>
                                                    <RowDefinition/>
                                                    <RowDefinition Height="10"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition/>
                                                </Grid.ColumnDefinitions>

                                                <WrapPanel Grid.Row="1" Grid.Column="0" Width="190" Height="50" Margin="20,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">

                                                </WrapPanel>

                                                <WrapPanel Grid.Row="1" Grid.Column="3" HorizontalAlignment="Center">

                                                </WrapPanel>

                                                <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" Width="920" HorizontalAlignment="Center" CornerRadius="10" BorderThickness="1" Background="LightBlue">
                                                    <TextBlock Padding="10,0,0,0" Text="{Binding Comment}"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>
