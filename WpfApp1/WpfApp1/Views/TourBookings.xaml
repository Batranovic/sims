<Window x:Class="WpfApp1.Views.TourBookings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Views"
        mc:Ignorable="d"
        Title="TourBookings" Height="660" Width="1024">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" Background="#f3dcc4" Height="51">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- Content goes here -->
                <Button  Command="{Binding AllToursCommand}" Background="#f9cb9e" Content="All tours" HorizontalAlignment="Left" Width="110" Margin="36,8,0,0"/>
                <Button  IsEnabled="false" Command="{Binding BookedToursCommand}" Background="#f9cb9e" Content="Booked tours" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Width="110" Margin="182,8,0,0" />
                <Button Background="#f9cb9e" Command ="{Binding RequestTourCommand}" Content="Request new tours" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Width="110" Margin="327,8,0,0" Grid.ColumnSpan="2"/>
                <Button Background="#f9cb9e" Content="Request list" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Width="110" Grid.Column="1" Margin="132,8,0,0"/>
                <Button Background="#f9cb9e" Command ="{Binding LogOutCommand}" Content="My profile" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Width="110" Grid.Column="2" Margin="204,8,0,0"/>
            </Grid>
        </DockPanel>
        <DockPanel DockPanel.Dock="Bottom" Background="WhiteSmoke">
            <DockPanel DockPanel.Dock="Left" Height="590" Width="650" Background="WHite">
                <DockPanel DockPanel.Dock="Top">
                    <Grid Width="573" Height="310">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="152"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Border  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" BorderBrush="Black" BorderThickness="1,1,1,0" />
                        <Border  Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="5" BorderBrush="Black" BorderThickness="1,0,1,1" />
                        <Border  Grid.Row="2" Grid.Column="0" Grid.RowSpan="3" BorderBrush="Black" BorderThickness="1,0,0,0" />
                        <Border  Grid.Row="2" Grid.Column="6" Grid.RowSpan="3" BorderBrush="Black" BorderThickness="0,0,1,0" />
                        <TextBlock  Text=" About tour"  Grid.Row="0" Grid.ColumnSpan="5"  FontSize="20" Margin="0,10,0,10" FontWeight="Bold" />
                        <TextBlock Text=" In the same location" Grid.Row="7" Grid.ColumnSpan="5"  FontSize="20" Margin="0,10,0,10" FontWeight="Bold" />
                        <Border Grid.Row="1" Grid.Column="0" Margin="15,15,15,15"  Grid.RowSpan="3" BorderBrush="Black" BorderThickness="1">
                            <Image></Image>
                        </Border>

                        <TextBlock Text="City" Grid.Row="1" Grid.Column="1" FontSize="15"  FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"   />
                        <TextBlock Text="State" Grid.Row="1" Grid.Column="2" FontSize="15"  FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <TextBlock Text="Duration" Grid.Row="1" Grid.Column="3" FontSize="15"  FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <TextBlock Text="Language" Grid.Row="1" Grid.Column="4" FontSize="15"  FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" />
                        <TextBlock Text="Description" Grid.Row="3" Grid.Column="1" FontSize="15"  FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding SelectedTourEvent.Tour.Location.City}" FontStyle="Oblique" Grid.Row="2" Grid.Column="1"  HorizontalAlignment="Left" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding SelectedTourEvent.Tour.Location.State}" FontStyle="Oblique"  Grid.Row="2" Grid.Column="2"  HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding SelectedTourEvent.Tour.Languages}" FontStyle="Oblique"  Grid.Row="2" Grid.Column="4"  HorizontalAlignment="Left" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding SelectedTourEvent.Tour.Duration}" FontStyle="Oblique"  Grid.Row="2" Grid.Column="3"  HorizontalAlignment="Left" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding SelectedTourEvent.Tour.Description}" FontStyle="Oblique"  Grid.Row="4" Grid.Column="1"  Grid.ColumnSpan="3"  HorizontalAlignment="Left" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding SelectedTourEvent.Tour.Name}" Grid.Row="4" Grid.Column="0" FontSize="13"  FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />
                        <DataGrid 
                       SelectionMode="Single"
                  ItemsSource="{Binding TourEvents, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding SelectedTourEvent, UpdateSourceTrigger=PropertyChanged}"
                  AutoGenerateColumns="False" IsReadOnly="True" Grid.ColumnSpan="5" Margin="0,55,0,-238" Grid.Row="7" >

                            <DataGrid.Columns>
                                <DataGridTextColumn  Header="State" Binding="{Binding Tour.Location.State}" Width="80"/>
                                <DataGridTextColumn  Header="City" Binding="{Binding Tour.Location.City}" Width="90"/>
                                <DataGridTextColumn  Header="Languages" Binding="{Binding Tour.Languages}" Width="90"/>
                                <DataGridTextColumn  Header="MaxGuests" Binding="{Binding Tour.MaxGuests}" Width="90"/>
                                <DataGridTextColumn  Header="Duration" Binding="{Binding Tour.Duration}" Width="90"/>
                                <DataGridTextColumn  Header="Date" Binding="{Binding StartTime}" Width="115"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </DockPanel>

                <DockPanel DockPanel.Dock="Bottom" Height="279"/>

            </DockPanel>
            <DockPanel DockPanel.Dock="Right" Width="374" Background="White">
                <Grid Width="344">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="107*"/>
                        <RowDefinition Height="39*"/>
                        <RowDefinition Height="146*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Rectangle  HorizontalAlignment="Left" Height="229" Stroke="Black" VerticalAlignment="Center" Width="306" Grid.Row="2" RenderTransformOrigin="0.5,0.5">
                        <Rectangle.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleY="-1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Rectangle.RenderTransform>
                    </Rectangle>
                    <DataGrid
                       SelectionMode="Single" Background="White"
                  ItemsSource="{Binding Vouchers, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding SelectedVoucher, UpdateSourceTrigger=PropertyChanged}"
                  AutoGenerateColumns="False" IsReadOnly="True" Margin="2,55,31,52" Grid.RowSpan="2" >
                        <!--SelectionChanged="DataGrid_SelectionChanged"-->
                        <DataGrid.Columns>
                            <DataGridTextColumn  Header="Name" Binding="{Binding Name}" Width="175"/>
                            <DataGridTextColumn  Header="Expiration date" Binding="{Binding ExpirationDate}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBlock  VerticalAlignment="Top" Margin="-2,10,36,0" Text=" Use a voucher"  FontSize="20" FontWeight="Bold" Height="36"/>
                    <TextBlock Margin="2,59,31,0"  Text=" Make a reservation"  FontSize="20" FontWeight="Bold" VerticalAlignment="Top" Grid.RowSpan="2" Grid.Row="1" Height="33"/>
                    <TextBlock Text="Number of people"  Margin="27,55,209,0" Grid.Row="2" VerticalAlignment="Top" Height="17"/>
                    <Button Command="{Binding CheckAvailabilityCommand}" Background="#f9cb9e"  Content="Availability" HorizontalAlignment="Left" Margin="194,51,0,0" Grid.Row="2" VerticalAlignment="Top" Width="88"/>
                    <TextBlock  Margin="27,104,219,159" Grid.Row="2" Text="{Binding AvailableSpotsText, UpdateSourceTrigger=PropertyChanged}" FontStyle="Oblique" FontWeight="Bold"/>
                    <TextBlock  Margin="146,104,146,159" Grid.Row="2" Text="{Binding AvailableSpots, UpdateSourceTrigger=PropertyChanged}" FontStyle="Oblique"/>
                    <TextBlock Margin="27,161,268,0" Grid.Row="2"  Text="Voucher" VerticalAlignment="Top" Height="20"/>
                    <TextBlock Margin="102,161,171,104" Grid.Row="2" Text="{Binding SelectedVoucher.Name}" FontStyle="Oblique"  RenderTransformOrigin="0.49,1.304"/>
                    <Button Command="{Binding SuggestMoreCommand}" Background="#f9cb9e" Content="Suggest more" HorizontalAlignment="Left" Margin="27,215,0,0" Grid.Row="2" VerticalAlignment="Top" Width="98"/>
                    <Button Command="{Binding ReserveCommand}" Background="#f9cb9e" Content="Reserve"  HorizontalAlignment="Left" Margin="194,215,0,0" Grid.Row="2" VerticalAlignment="Top" Width="91"/>
                    <TextBox Margin="138,50,171,0" Grid.Row="2"  Text="{Binding NumberOfPeople}" VerticalAlignment="Top" Height="22"/>
                </Grid>
            </DockPanel>

        </DockPanel>
    </DockPanel>
</Window>
