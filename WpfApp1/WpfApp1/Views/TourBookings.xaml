<Window x:Class="WpfApp1.Views.TourBookings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Views"
        mc:Ignorable="d"
        Title="TourBookings" Height="660" Width="1024">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top" Background="#f3dcc4" Height="51">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!-- Content goes here -->
                <Button  Command="{Binding AllToursCommand}" Background="#f9cb9e" Content="All tours" HorizontalAlignment="Left" Width="110" Margin="36,8,0,0"/>
                <Button Command="{Binding BookedToursCommand}" Background="#f9cb9e" Content="Booked tours" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Width="110" Margin="182,8,0,0" />
                <Button Background="#f9cb9e" Content="Request new tours" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Width="110" Margin="327,8,0,0" Grid.ColumnSpan="2"/>
                <Button Background="#f9cb9e" Content="Request list" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Width="110" Grid.Column="1" Margin="132,8,0,0"/>
                <Button Background="#f9cb9e" Content="My profile" Height="34" VerticalAlignment="Top" HorizontalAlignment="Left" Width="110" Grid.Column="2" Margin="204,8,0,0"/>
            </Grid>
        </DockPanel>
        <DockPanel DockPanel.Dock="Bottom" Background="WhiteSmoke" >
            <DockPanel DockPanel.Dock="Left" Height="580" Width="650" Background="WHite">
                <Grid Width="573" Height="554">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Rectangle Height="185" Margin="-17,60,10,0" Stroke="Black" VerticalAlignment="Top"/>
                    <TextBlock Text="City" FontSize="15"  FontWeight="Bold" HorizontalAlignment="Left" Margin="174,74,0,171" Width="40" />
                    <TextBlock Text="State" FontSize="15" FontWeight="Bold"  Margin="273,76,244,172" />
                    <TextBlock Text="Maximum guests" FontSize="15"  FontWeight="Bold"  Margin="374,76,39,170"/>
                    <TextBlock Text="{Binding SelectedTourEvent.Tour.MaxGuests}"  FontStyle="Oblique" Margin="374,108,98,145"/>
                    <TextBlock Text="{Binding SelectedTourEvent.Tour.Location.City}" FontStyle="Oblique" Margin="170,106,355,145"/>
                    <TextBlock Text="{Binding SelectedTourEvent.Tour.Location.State}" FontStyle="Oblique" Margin="273,108,236,145"/>
                    <TextBlock Background="#f3dcc4" Text=" About tour" FontSize="20" FontWeight="Bold" Margin="-17,10,10,237"/>
                    <TextBlock Background="#f3dcc4" Text=" In the same location" Margin="-17,264,10,0"  FontSize="20" FontWeight="Bold"  VerticalAlignment="Top" Grid.RowSpan="2"/>

                    <DataGrid DockPanel.Dock="Bottom" Background="White"
                       SelectionMode="Single"
                  ItemsSource="{Binding TourEvents, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding SelectedTourEvent, UpdateSourceTrigger=PropertyChanged}"
                  AutoGenerateColumns="False" IsReadOnly="True" Margin="-17,32,10,10" Grid.Row="1" >
                        <!--SelectionChanged="DataGrid_SelectionChanged"-->
                        <DataGrid.Columns>
                            <DataGridTextColumn  Header="State" Binding="{Binding Tour.Location.State}" Width="80"/>
                            <DataGridTextColumn  Header="City" Binding="{Binding Tour.Location.City}" Width="90"/>
                            <DataGridTextColumn  Header="Languages" Binding="{Binding Tour.Languages}" Width="90"/>
                            <DataGridTextColumn  Header="MaxGuests" Binding="{Binding Tour.MaxGuests}" Width="90"/>
                            <DataGridTextColumn  Header="Duration" Binding="{Binding Tour.Duration}" Width="90"/>
                            <DataGridTextColumn  Header="Date" Binding="{Binding StartTime}" Width="115"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Image  Height="72" Margin="3,92,439,0" VerticalAlignment="Top"/>
                    <TextBlock  Text="{Binding SelectedTourEvent.Tour.Name}" FontStyle="Oblique" TextWrapping="Wrap" Margin="29,183,457,0" VerticalAlignment="Top" Height="39"/>
                    <TextBlock  Text="Description" FontSize="15" FontWeight="Bold" Margin="174,168,291,0" VerticalAlignment="Top" Height="21"/>
                    <TextBlock  Text="{Binding SelectedTourEvent.Tour.Description}" FontStyle="Oblique" TextWrapping="Wrap" Margin="286,173,39,0" VerticalAlignment="Top" Height="46"/>
                    <Rectangle HorizontalAlignment="Left" Height="80" Stroke="Black" VerticalAlignment="Top" Width="139" Margin="0,89,0,0"/>
                </Grid>

            </DockPanel>
            <DockPanel DockPanel.Dock="Right" Width="374" Background="White">
                <Grid Width="344">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="107*"/>
                        <RowDefinition Height="39*"/>
                        <RowDefinition Height="146*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Rectangle  HorizontalAlignment="Left" Height="227" Stroke="Black" VerticalAlignment="Center" Width="306" Grid.Row="2" RenderTransformOrigin="0.5,0.5">
                        <Rectangle.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleY="-1"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Rectangle.RenderTransform>
                    </Rectangle>
                    <DataGrid
                       SelectionMode="Single" Background="White"
                  ItemsSource="{Binding Vouchers, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding SelectedVoucher, UpdateSourceTrigger=PropertyChanged}"
                  AutoGenerateColumns="False" IsReadOnly="True" Margin="0,73,33,39" Grid.RowSpan="2" >
                        <!--SelectionChanged="DataGrid_SelectionChanged"-->
                        <DataGrid.Columns>
                            <DataGridTextColumn  Header="Name" Binding="{Binding Name}" Width="175"/>
                            <DataGridTextColumn  Header="Expiration date" Binding="{Binding ExpirationDate}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBlock Margin="2,27,31,160"  Text=" Use a voucher" Background="#f3dcc4" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Margin="2,64,38,0" Text=" Make a reservation" Background="#f3dcc4"  FontSize="20" FontWeight="Bold" VerticalAlignment="Top" Grid.RowSpan="2" Grid.Row="1"/>
                    <TextBlock Text="Number of people"  Margin="27,55,209,0" Grid.Row="2" VerticalAlignment="Top" Height="17"/>
                    <Button Command="{Binding CheckAvailabilityCommand}" Background="#f9cb9e"  Content="Availability" HorizontalAlignment="Left" Margin="194,51,0,0" Grid.Row="2" VerticalAlignment="Top" Width="88"/>
                    <TextBlock  Margin="27,104,219,159" Grid.Row="2" Text="{Binding AvailableSpotsText, UpdateSourceTrigger=PropertyChanged}" FontStyle="Oblique" FontWeight="Bold"/>
                    <TextBlock  Margin="146,104,146,159" Grid.Row="2" Text="{Binding AvailableSpots, UpdateSourceTrigger=PropertyChanged}" FontStyle="Oblique"/>
                    <TextBlock Margin="27,161,268,0" Grid.Row="2"  Text="Voucher" VerticalAlignment="Top" Height="20"/>
                    <TextBlock Margin="102,161,171,104" Grid.Row="2" Text="{Binding SelectedVoucher.Name}" FontStyle="Oblique"  RenderTransformOrigin="0.49,1.304"/>
                    <Button Command="{Binding SuggestMoreCommand}" Background="#f9cb9e" Content="Suggest more" HorizontalAlignment="Left" Margin="27,215,0,0" Grid.Row="2" VerticalAlignment="Top" Width="98"/>
                    <Button Command="{Binding ReserveCommand}" Background="#f9cb9e" Content="Reserve"  HorizontalAlignment="Left" Margin="194,215,0,0" Grid.Row="2" VerticalAlignment="Top" Width="91"/>
                    <TextBox Margin="138,50,171,0" Grid.Row="2"  Text="{Binding NumberOfPeople}" VerticalAlignment="Top" Height="22"/>
                </Grid>
            </DockPanel>

        </DockPanel>
    </DockPanel>
</Window>
