<Window x:Class="WpfApp1.Views.AddRatingTourAndGuide"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Views"
        mc:Ignorable="d"
        Title="AddRatingTourAndGuide" Height="650" Width="800">
    <Window.Resources>
        <ControlTemplate x:Key="ValidationTemplate">
            <StackPanel>
                <!-- Placeholder for the TextBox itself -->
                <AdornedElementPlaceholder x:Name="textBox" />
                <TextBlock Text="{Binding [0].ErrorContent}" Foreground="Red" />
            </StackPanel>
        </ControlTemplate>
    </Window.Resources>
    <Grid Margin="0,0,0,7">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="436*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="370"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Margin="30,24,30,128" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Height="30" FontSize="13">Guide's knowledge:</Label>
            <Label Grid.Row="1" Grid.Column="0" Height="30" FontSize="13">Guide's language:</Label>
            <Label Grid.Row="2" Grid.Column="0" Height="30" FontSize="13">How interesting was the tour:</Label>
            <Label Grid.Row="3" Grid.Column="0" Height="30" FontSize="13">Add your image:</Label>
            <Label Grid.Row="4" Grid.Column="0" Height="30" FontSize="13">Added images:</Label>
            <Label Grid.Row="5" Grid.Column="1"  Height="30"></Label>
            <Label Grid.Row="6" Grid.Column="0" Height="30" Margin="0,32,0,0" FontSize="13">Leave a comment:</Label>

            <ComboBox  Grid.Row="0" Grid.Column="1" ItemsSource="{Binding Path=Scores}" SelectedItem="{Binding Path=SelectedKnowledge, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Validation.ErrorTemplate="{StaticResource ValidationTemplate}" Height="30"></ComboBox>
            <ComboBox  Grid.Row="1"  Grid.Column="1" ItemsSource="{Binding Path=Scores}" SelectedItem="{Binding Path=SelectedLanguage, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Validation.ErrorTemplate="{StaticResource ValidationTemplate}" Height="30"></ComboBox>
            <ComboBox  Grid.Row="2"  Grid.Column="1" ItemsSource="{Binding Path=Scores}" SelectedItem="{Binding Path=SelectedInterest, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Validation.ErrorTemplate="{StaticResource ValidationTemplate}" Height="30"/>
            <WrapPanel Grid.Row="3"  FlowDirection="LeftToRight" HorizontalAlignment="Left"  Grid.Column="1"  Width="370"/>
            <TextBox Text="{Binding Url, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" VerticalAlignment="Center"  Height="30" Width="309" Grid.Column="1" Grid.Row="3"/>
            <Button Content="+ " IsDefault="True" VerticalAlignment="Top" Margin="314,21,0,0"   Command="{Binding SubmitImageCommand}" Grid.Column="1" Grid.Row="3" Height="28" HorizontalAlignment="Left" Width="25" />
            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding Path=Comment, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" Validation.ErrorTemplate="{StaticResource ValidationTemplate}"  Height="30" Margin="0,32,0,0"></TextBox>
            <DataGrid 
                  ItemsSource="{Binding Path=Images, UpdateSourceTrigger=PropertyChanged}"
                  SelectedItem="{Binding SelectedUrl}" AutoGenerateColumns="False" IsReadOnly="True"
                  x:Name="myImagesOverview" Margin="0,16,0,61" Grid.Column="1" Grid.RowSpan="3" Grid.Row="4">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Url" Binding="{Binding}" Width="*"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="-" Command="{Binding RemoveImageCommand}" Grid.Column="1"  Margin="344,20,0,19" Grid.Row="3"/>

        </Grid>
        <WrapPanel Grid.Row="1"  FlowDirection="LeftToRight" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Margin="510,0,0,0" />
        <Button Content=" Confirm " IsCancel="True" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="592,178,0,0"
              Command="{Binding ConfirmCommand}" Grid.Column="1" Grid.Row="1" Width="74" Height="33"/>
        <Button Content=" Reject " IsDefault="True" HorizontalAlignment="Left" VerticalAlignment="Top"
              Command="{Binding RejectCommand}" RenderTransformOrigin="10.323,0.601" Width="79" Grid.Column="1" Margin="494,178,0,0" Grid.Row="1" Height="33" />
    </Grid>
</Window>
