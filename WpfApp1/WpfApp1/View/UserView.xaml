<Window x:Class="WpfApp1.View.UserView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.View"
        mc:Ignorable="d"
        Title="Owner view" Height="450" Width="800">
    <DockPanel>
        <DataGrid DockPanel.Dock="Bottom"
                  ItemsSource="{Binding Path=Owners, UpdateSourceTrigger=PropertyChanged}"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  Width="700" Height="350">
            <DataGrid.Columns>
                <DataGridTextColumn  Header="Name" Binding="{Binding Name}" Width="100"></DataGridTextColumn>
                <DataGridTextColumn  Header="Surname" Binding="{Binding Surname}" Width="150"></DataGridTextColumn>
                <DataGridTextColumn  Header="Username" Binding="{Binding Username}" Width="150"></DataGridTextColumn>
                <DataGridTextColumn  Header="Password" Binding="{Binding Password}" Width="100"></DataGridTextColumn>
                <DataGridTextColumn  Header="Email" Binding="{Binding Email}" Width="*"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
